<section class="panel workspace-create" id="js-create">
    <h1>New page details</h1>
    <form>
        <label for="js-create__page-select" class="hidden">Page type</label>
        <div class="select-wrap">
            <select id="js-create__page-select" required>
                <option value="" name=""> --- Select page type --- </option>
                {{!-- display valid options --}}
                {{#each this}}
                    {{#if valid}}
                        <option value="{{id}}" name="{{id}}" >{{title}}</option>
                    {{/if}}
                {{/each}}

                {{!-- display disabled/invalid options --}}
                {{#each this}}
                    {{#unless valid}}
                        <option value="{{id}}" name="{{id}}" disabled>{{title}}</option>
                    {{/unless}}
                {{/each}}
            </select>
        </div>
        <div id="js-create__optional-inputs"></div>
        <label for="pagename" class="hidden">Page name</label>
        <input id="pagename" class="full" type="text" placeholder="Page name"/>
        <button class="btn btn--positive margin-left--0 btn-page-create">Create page</button>
    </form>
</section>
